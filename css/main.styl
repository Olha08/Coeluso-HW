@media (min-width: 768px) {
  .container {
    width 750px
  }
}
@media (min-width: 992px) {
  .container {
    width 970px
  }
}
@media (min-width: 1200px) {
  .container {
    width 1170px
  }
}

@media (max-width: 1200px) {
img.grow, .discover img {
  width 100%
  max-width 300px
  margin-bottom 35px
}

.iphone-center:after {
    display none
  }

.iphone-center img {
  max-width 250px
}
}
@media (max-width: 991px) {

  footer .flex-container {

    flex-wrap wrap
  }


  footer li, footer p, footer ul  {

    flex-basis 100%!important
    text-align center !important
  }

  .slider .back-carousel .text-carousel {
    font-size 12px
  }

  p.text-author:before {
    display: block;
    margin: 0 auto;
    margin-bottom: 10px;
  }

  .iphone-center:after{
    display none
  }


  .headphones .headphones-content, .power, .features, .btn {
    text-align center
  }

  .iphone-center {

    margin-bottom 40px
  }

  .discover img {
    display block
    margin 0 auto
  }

}

@media (min-width: 768px) {

  .navbar-collapse.collapse {
    display none!important
    overflow auto!important
  }

  .navbar-toggle, .collapse.in {

    display block!important
  }

  .navbar-collapse.in{

    overflow-y visible!important
  }

  .navbar-header, .navbar-nav, .navbar-nav>li {
    float none
  }


}

.iphone-center
  position relative
  img
    position relative
    z-index 6
  &:after
    position absolute
    bottom -85px
    left -50%
    width 798px
    height 126px
    content url(../img/layer.png)
    z-index 5